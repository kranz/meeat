<h1>Listing reservations</h1>

<table>
  <tr>
    <th>Restaurant</th>
    <th>Date</th>
    <th>Code</th>
    <th>Conference</th>
    <th>Confirmation</th>
    <th>Confirmation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.restaurant_id %></td>
    <td><%= reservation.date %></td>
    <td><%= reservation.code %></td>
    <td><%= reservation.conference_id %></td>
    <td><%= reservation.confirmation %></td>
    <td><%= reservation.confirmation %></td>
    <td><%= link_to 'Show', reservation %></td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
    <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

