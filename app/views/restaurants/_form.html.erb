<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> <%= t("restaurant.error.saveerror") %></h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, t("restaurant.name") %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address, t("restaurant.address") %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city, t("restaurant.city") %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state, t("restaurant.state") %>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip, t("restaurant.zip") %>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :country_id, t("restaurant.country") %>
    <%= f.collection_select(:country_id, Country.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :time_zone_id, t("restaurant.timezone") %>
    <%= f.number_field :time_zone_id %>
  </div>
  <%= f.fields_for :contacts do |builder| %>
    <%= render 'contact_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Nuovo contatto", f, :contacts %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
